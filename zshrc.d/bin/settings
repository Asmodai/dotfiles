if [ ! "${ZSH_HACKER}" = "true" ];
then
    echo "This will only work with your hacked up zsh config.  Exiting."
    exit 255
fi

# Import utils
. ${ZSH}/lib/utils.zsh

distro=$(getDistro)

echo "ZSH version ${ZSH_VERSION} on ${distro}."

function procPaths() {
    echo
    echo "Paths:"

    local output=""

    test -n "${GOPATH}"   && output="${output}\n:Go path:${GOPATH}"
    test -n "${LISPPATH}" && output="${output}\n:Lisp path:${LISPPATH}"

    echo -ne ${output} | column -t -s ':'
}

function procPlugins() {
    echo
    echo "Plugins"

    local output=""

    for dir in ${ZSH}/plugins/*;
    do
        local _base=$(basename ${dir})

        if [[ -f "$dir/${_base}.plugin.zsh" ]];
        then
            output="${output}\n:${_base}:Loaded."
        fi
    done

    echo -ne ${output} | column -t -s ':'
}

procPaths
procPlugins

# settings ends here.
